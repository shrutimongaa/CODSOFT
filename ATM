import java.util.*;
import java.util.Scanner;

public class ATM{
public static void main(String[]args){
Scanner sc = new Scanner(System.in);
		int pin = 7879;
		int balance = 50500;
		int attempt = 0;

		System.out.println("Welcome to SBI ATM");
		while (attempt < 3) {
			System.out.println("Enter your Pin");

			int userpin = sc.nextInt();

			if (userpin == pin) {
				System.out.println("Acess Granted");

				boolean exit = false;
				while (!exit) {
					System.out.println("Select Option");
					System.out.println("1-Check balance");
					System.out.println("2-Withdraw Cash");
					System.out.println("3-Depositing Cash");
					System.out.println("4-Exit");

					int choice = sc.nextInt();

					switch (choice) {
					case 1:
						System.out.println("You have been selected for Check balance");
						System.out.println("The balance is " + balance);
						break;

					case 2:
						System.out.println("You have been selected for Withdraw cash");
            System.out.println("Enter amount to withdraw: ");
						int withdrawl = sc.nextInt();
						balance = balance - withdrawl;
						System.out.println(+withdrawl + " Cash has been withdrawl");
						break;

					case 3:
						System.out.println("You have been selected for Depositing cash ");
            System.out.println("Enter amount to deposit: ");
						int deposit = sc.nextInt();
						balance = balance + deposit;
						System.out.println(+deposit + " Cash has been Deposited");
						break;

					case 4:
						System.out.println("You have been selected for exit");
						System.out.println("Thanks for visiting !! See you soon ");
						exit = true;
						break;
					}
				}

			} else {
				attempt++;
				System.out.println("Wrong Attempt. Attempts remaining: " + (3 - attempt));
			}
			if (attempt == 3) {
				System.out.println("Your all attempts are wrong! Account Locked... Contact Bank.");
			}
}
}
		}
